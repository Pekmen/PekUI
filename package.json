{
  "name": "pekui",
  "packageManager": "yarn@3.5.0",
  "author": "Milan Pekovic <milanpekovic89@gmail.com",
  "homepage": "https://pekmen.github.io/PekUI/",
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": "npx prettier --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
