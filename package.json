{
  "name": "pekui",
  "packageManager": "yarn@3.5.0",
  "author": "Milan Pekovic <milanpekovic89@gmail.com",
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": "npx prettier --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "latest",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "pinst": "^3.0.0",
    "typescript": "^4.9.3"
  }
}
